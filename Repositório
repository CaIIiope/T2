printf("a pessoa para quem quer fazer a transferência é do nosso banco?");
if(sim)
printf("insira o nome da pessoa para quem quer transferir");
fgets(pessoa,50,stdin)
for(int j = 0; j<n; j++){
if(pessoa == cliente[j].nome)
printf("pessoa encontrada");
int a = j;
}
printf("insira o valor da transferência:");
scanf("%f",transf);
if(trasf<=cliente[k].saldo)
transação possivel
cliente[k].saldo = cliente[k].saldo - transf;
else
saldo insuficiente;
cliente[a].saldo = cliente[k].saldo + transf;
if(nao)
printf("insira o valor da transferência:");
scanf("%f",transf);
if(trasf<=cliente[k].saldo)
transação possivel
cliente[k].saldo = cliente[k].saldo - transf;
else
saldo insuficiente;

[4]sacar dinheiro
saque(){
printf("insira o valor que quer sacar:");
scanf("%f",saque);
if(saque<=cliente[k].saldo)
saque possivel;
cliente[k].saldo = cliente[k].saldo - saque;
else
saldo insuficiente;
}

