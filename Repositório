[1]
nome:
for(int i = 0; i<=n; i++){
indice = strcmp(nome,cliente[i].nome);
if(indice == 0){
k = i;
continue;
else if(i=n && indice != 0)
printf("usuário não encontrado. tente novamente.");
}
}

senha:
if(senha == cliente[k].senha)
printf("senha correta");
else{
printf("senha inválida.tente novamente");
continue;
}

